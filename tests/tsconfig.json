{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@domain/*": ["../src/domain/*"],
      "@application/*": ["../src/application/*"],
      "@infrastructure/*": ["../src/infrastructure/*"],
      "@presentation/*": ["../src/presentation/*"],
      "@shared/*": ["../src/shared/*"],
      "@mocks/*": ["./__mocks__/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../src/**/*.ts"
  ]
}
